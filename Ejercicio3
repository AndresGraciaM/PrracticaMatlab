clear
nneg=-10:-1;
npos=1:10;  
n=nneg;     
Fnneg=(1./(1i*n*pi)).*(-3*exp(-1i*n*6*pi/7)+2*exp(1i*n*2*pi/7)+exp(-1i*n*12*pi/7));
n=npos;     
Fnpos=(1./(1i*n*pi)).*(-3*exp(-1i*n*6*pi/7)+2*exp(1i*n*2*pi/7)+exp(-1i*n*12*pi/7));
F0=10/7;      
n=[nneg,0,npos];
Fn=[Fnneg,F0,Fnpos];
k=0;

for t=-1:.01:6 
k=k+1;
fapprox(k)=sum(Fn.*(exp(1i*n*2*pi*t/7)));
end
t=-1:.01:6;
fexact=4*(t<=3)-2*(t>=3);
plot(t,fapprox,t,fexact);
